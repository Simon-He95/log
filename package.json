{
  "publisher": "simonhe",
  "name": "log",
  "displayName": "log",
  "version": "0.0.11",
  "description": "Quickly generate console.log statements in your code",
  "author": "Simon He <https://github.com/Simon-He95>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/Simon-He95",
  "homepage": "https://github.com/Simon-He95/log#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/Simon-He95/log"
  },
  "bugs": {
    "url": "https://github.com/Simon-He95/log/issues"
  },
  "sponsor": {
    "url": "https://github.com/Simon-He95/sponsor"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/index.js",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.77.0"
  },
  "activationEvents": [],
  "contributes": {
    "commands": [
      {
        "command": "log.log",
        "title": "log"
      },
      {
        "command": "log.removeConsoleLogs",
        "title": "Remove all console.log statements in active editor"
      },
      {
        "command": "log.removeConsoleLogsWorkspace",
        "title": "Remove console.* statements in workspace"
      },
      {
        "command": "log.previewRemoveConsoleLogs",
        "title": "Preview console.* removal in active editor"
      }
    ],
    "keybindings": [
      {
        "command": "log.log",
        "key": "ctrl+l"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "log",
      "properties": {
        "codeLoc.config": {
          "type": "object",
          "default": {
            "fileInfo": true,
            "scoped": true,
            "randomColor": true
          },
          "description": "Insertion behavior config (legacy key)"
        },
        "log.removeConsole": {
          "type": "object",
          "default": {
            "methods": ["log", "warn", "error", "info", "debug"],
            "preservePatterns": ["TODO", "KEEP"],
            "includeTrailingNewLine": true
          },
          "description": "Remove console.* configuration: methods to target, patterns to preserve if found inside args, and whether to remove the trailing newline if the whole line only contained the call."
        },
        "log.removeConsole.workspace": {
          "type": "object",
          "default": {
            "includeGlobs": ["**/*.{js,jsx,ts,tsx}"] ,
            "excludeGlobs": ["**/node_modules/**", "**/dist/**"],
            "confirm": true
          },
          "description": "Workspace removal options: include / exclude globs and confirmation toggle."
        },
        "codeLoc.config.colors": {
          "type": "array",
          "default": [],
            "items": { "type": "string" },
          "description": "Optional fixed color list for log styling; overrides randomColor when non-empty."
        }
      }
    }
  },
  "scripts": {
    "dev": "pnpm build --watch",
    "test": "vitest",
    "build": "tsup src/index.ts --external vscode",
    "pack": "vsce package --no-dependencies",
    "lint": "eslint --cache",
    "lint:fix": "pnpm lint --fix",
    "publish": "vsce publish --no-dependencies",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && pnpm run publish"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.16.0",
    "@types/vscode": "1.77.0",
    "@vscode-use/utils": "^0.1.59",
    "@vscode/vsce": "^3.6.0",
    "bumpp": "^9.11.1",
    "eslint": "^8.57.1",
    "esno": "^0.16.3",
    "tsup": "^6.7.0",
    "typescript": "^5.9.2",
    "vitest": "^0.29.8"
  },
  "keywords": [
    "vscode",
    "extension",
    "console.log",
    "logging",
    "developer tools",
    "productivity"
  ]
}
